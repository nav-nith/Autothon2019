pipeline {
    agent any 

    stages {
        stage('Build') {
            steps {
                git (url:"git@github.com:nav-nith/Autothon2019.git", branch: "master", credentialsId: "navnith")
                echo 'Building..'
            }
        }
        stage('Test') {
            agent {
                agent "Slave1_Win10"
            }
            steps {
                    echo 'Testing..'
                    sh "pip install -r requirements.txt"
                    sh "pytest -sv -ra test_forum.py --junitxml=results/junit/result.xml"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}